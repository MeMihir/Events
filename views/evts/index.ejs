<div class="card-columns">
<% events.forEach( (event) => { %>
    <div class="card mx-1 text-white bg-dark" style="max-width: 30rem;">
        <img class="card-img-top" alt="..." src=<%= event.image %>>
        <div class="card-body">
        <h5 class="card-title"> <%= event.name %> </h5>
        <p class="card-text"><%= event.abstract.substring(0,100) %>...</p>
        <a href="/events/<%= event._id %>" class="btn btn-primary"> Check it Out </a>
        </div>
    </div>
<% }) %>
</div>


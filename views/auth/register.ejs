<% include ../partials/header.ejs %>
<div class="d-flex justify-content-center">
    <div>
        <h1>Sign Up</h1>
        <form action="/signup" method="post" style="max-width: 30rem;">
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" >Club Name</span>
                </div>
                <input type="text" name="newClub[username]" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
